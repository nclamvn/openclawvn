# ============================================
# OpenClaw Vietnam Edition - Environment Variables
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to version control!
# ============================================

# === AI Provider (Required) ===
# Anthropic Claude API - Primary AI provider
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxx

# OpenAI API - For TTS, embeddings, fallback
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxx

# === Messaging Channels ===

# Telegram Bot (Get from @BotFather)
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Zalo Official Account (Get from developers.zalo.me)
ZALO_APP_ID=your_zalo_app_id
ZALO_SECRET_KEY=your_zalo_secret_key
ZALO_REFRESH_TOKEN=your_refresh_token

# === TTS Providers (Optional) ===

# ElevenLabs - High quality TTS
ELEVENLABS_API_KEY=xi_xxxxxxxxxxxxxxxxxxxxx
# or
XI_API_KEY=xi_xxxxxxxxxxxxxxxxxxxxx

# === Memory & Search (Optional) ===

# For LanceDB embeddings (uses OpenAI embeddings)
# Already covered by OPENAI_API_KEY above

# Brave Search API (for web search tool)
BRAVE_API_KEY=BSAxxxxxxxxxxxxxxxxxxxxx

# === Browser Automation (Optional) ===

# Browserless.io API (for headless browser)
BROWSERLESS_API_KEY=xxxxxxxxxxxxxxxxxxxxx

# === Security Settings ===

# Gateway bind address (use 127.0.0.1 for local only)
OPENCLAW_BIND=127.0.0.1

# Gateway port
OPENCLAW_PORT=18789

# Enable sandbox mode for code execution
OPENCLAW_SANDBOX=true

# === Development ===

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Skip channel initialization (for testing)
# OPENCLAW_SKIP_CHANNELS=1
