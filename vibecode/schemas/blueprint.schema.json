{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openclaw.ai/vibecode/blueprint.schema.json",
  "title": "Vibecode Blueprint",
  "description": "Schema for Vibecode Blueprint - the contract between Architect and Builder",
  "type": "object",
  "required": ["project", "design", "structure", "tech"],
  "properties": {
    "project": {
      "type": "object",
      "description": "Project metadata",
      "required": ["name", "type"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Project name",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "description": "Project type",
          "enum": ["landing", "saas", "dashboard", "blog", "portfolio", "ecommerce", "webapp"]
        },
        "description": {
          "type": "string",
          "description": "Brief project description"
        },
        "language": {
          "type": "string",
          "description": "Content language",
          "enum": ["vi", "en", "bilingual"],
          "default": "vi"
        }
      }
    },
    "design": {
      "type": "object",
      "description": "Design system specification",
      "required": ["theme", "colors"],
      "properties": {
        "theme": {
          "type": "string",
          "enum": ["dark", "light"],
          "default": "dark"
        },
        "colors": {
          "type": "object",
          "required": ["primary", "background", "text"],
          "properties": {
            "primary": {
              "type": "string",
              "pattern": "^#[0-9A-Fa-f]{6}$",
              "description": "Primary brand color (hex)"
            },
            "secondary": {
              "type": "string",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            },
            "accent": {
              "type": "string",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            },
            "background": {
              "type": "string",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            },
            "text": {
              "type": "string",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            }
          }
        },
        "typography": {
          "type": "object",
          "properties": {
            "headingFont": {
              "type": "string",
              "description": "Font for headings (Google Fonts)"
            },
            "bodyFont": {
              "type": "string",
              "description": "Font for body text"
            }
          }
        },
        "style": {
          "type": "string",
          "enum": ["minimal", "bold", "editorial", "corporate", "playful"],
          "description": "Overall design style"
        }
      }
    },
    "structure": {
      "type": "object",
      "description": "Page and component structure",
      "required": ["pages"],
      "properties": {
        "pages": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["path", "name"],
            "properties": {
              "path": {
                "type": "string",
                "pattern": "^/",
                "description": "URL path (must start with /)"
              },
              "name": {
                "type": "string",
                "description": "Page name"
              },
              "sections": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Sections on this page"
              }
            }
          }
        },
        "components": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "props": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "assets": {
      "type": "object",
      "description": "External assets (images, icons, fonts)",
      "properties": {
        "images": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "url", "verified"],
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier for the image"
              },
              "description": {
                "type": "string",
                "description": "What the image shows"
              },
              "url": {
                "type": "string",
                "format": "uri",
                "description": "Primary URL (must be verified)"
              },
              "fallback": {
                "type": "string",
                "format": "uri",
                "description": "Fallback URL if primary fails"
              },
              "verified": {
                "type": "boolean",
                "const": true,
                "description": "MUST be true - URL has been tested"
              }
            }
          }
        },
        "icons": {
          "type": "string",
          "description": "Icon library to use",
          "enum": ["lucide-react", "heroicons", "phosphor", "tabler"],
          "default": "lucide-react"
        }
      }
    },
    "content": {
      "type": "object",
      "description": "Text content for the site",
      "additionalProperties": true
    },
    "tech": {
      "type": "object",
      "description": "Technology stack",
      "required": ["framework", "styling"],
      "properties": {
        "framework": {
          "type": "string",
          "description": "Frontend framework",
          "enum": ["Next.js 14", "Next.js 15", "Vite + React", "Astro"],
          "default": "Next.js 14"
        },
        "styling": {
          "type": "string",
          "enum": ["Tailwind CSS", "CSS Modules", "styled-components"],
          "default": "Tailwind CSS"
        },
        "animation": {
          "type": "string",
          "enum": ["Framer Motion", "GSAP", "CSS only", "none"],
          "default": "Framer Motion"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "NPM packages to install"
        }
      }
    },
    "files": {
      "type": "array",
      "description": "Files to create",
      "items": {
        "type": "object",
        "required": ["path", "purpose"],
        "properties": {
          "path": {
            "type": "string",
            "description": "File path relative to project root"
          },
          "purpose": {
            "type": "string",
            "description": "What this file does"
          }
        }
      }
    },
    "verification": {
      "type": "object",
      "description": "QA checklist",
      "properties": {
        "checklist": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
